<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ha.thanh.pikerfree">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.splashActivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.introActivity.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.mainActivity.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.newPostActivity.NewPostActivity" />
        <activity android:name=".activities.login.LoginActivity">

        </activity>
        <activity android:name=".activities.signup.SignUpActivity"></activity>
        <activity android:name=".activities.forgetPassword.ForgetPassActivity"></activity>
    </application>

</manifest>