<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ha.thanh.pikerfree.customviews.CustomEditText
            android:id="@+id/tv_search_post"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/plate_small_corner"
            android:hint="@string/search_hint"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black_3"
            android:textColorHint="@color/gray_50"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@drawable/ic_search"
            android:tint="@color/white_100" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/near_by"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_white"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/nearby" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_placeholder" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_gray"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/recent" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_time" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/accessories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_gray"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/accessories" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_hanger" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/baby_and_toy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_white"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/baby_toy" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_stroller" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/cloths"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_white"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/cloths" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_coat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/electronics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_gray"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/electronics" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_idea" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/groceries"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_gray"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/groceries" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_shopping_basket" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_living"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_white"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/home_living" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_house" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_white"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/pets" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_rabbit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/others"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_gray"
            android:orientation="vertical">

            <ha.thanh.pikerfree.customviews.CustomTextView
                style="@style/categoryTitle"
                android:text="@string/others" />

            <ImageView
                style="@style/categoryImage"
                android:src="@drawable/ic_more" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
