<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/plate"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_post_image"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@color/gray_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:weightSum="4">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Old Laptop Acer"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="4"
            android:text="77/08/2017"
            android:textSize="14sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_status"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/plate_fill_green"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="4"
            android:text="Open"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
