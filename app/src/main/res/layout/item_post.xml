<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/plate"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_post_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@color/gray_2"
        android:src="@drawable/temple_images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:weightSum="5">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Old Laptop Acer"
            android:textSize="18sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="4"
            android:paddingRight="16dp"
            android:text="My old laptop still work fine but i just bough new one so i want to give away this old one. Please feel free to message me. I'm ready to call at any time."
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
