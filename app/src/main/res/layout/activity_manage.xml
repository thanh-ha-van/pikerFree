<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteShade"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_title"
        style="@style/normalToolbar">

        <ImageView
            android:id="@+id/ic_back"
            style="@style/toolbarBackButton" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_title"
            style="@style/toolbarTitle"
            android:text="@string/manage"
            app:fontAssetName="Roboto-Bold.ttf" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_log_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/color_white"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/log_out"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/view_change_pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/color_white"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_pass"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/view_delete_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/color_white"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete_account"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

</LinearLayout>
