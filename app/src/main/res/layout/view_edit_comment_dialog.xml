<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:background="@drawable/plate_brown_shade"
    android:orientation="vertical"
    android:padding="20dp">

    <ha.thanh.pikerfree.customviews.CustomEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="16dp"
        android:background="@drawable/plate_brown_shade"
        android:padding="5dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/edit_comment"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:fontAssetName="Roboto-Bold.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/plate_orange_shade"
            android:gravity="center"
            android:text="@string/op_cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_ok_dialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/plate_green_shade"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>