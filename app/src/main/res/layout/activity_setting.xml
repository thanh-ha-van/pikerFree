<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteShade"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            android:tint="@color/white" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="46dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="Settings"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/vew_log_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notification: off"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/sw_mess_notification"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:shadowColor="@color/gray"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/view_distance_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search distance"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_search_distance"
            android:layout_width="wrap_content"
            android:text="10km"
            android:textColor="@color/GrayScale"
            android:textSize="18sp"
            android:layout_height="40dp"
            android:gravity="center"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/view_delete_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete account"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/view_help"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/GrayScale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />


</LinearLayout>
