<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="ha.thanh.pikerfree.activities.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ha.thanh.pikerfree.customviews.CustomEditText
            android:id="@+id/et_email"
            style="@style/editTextPlate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:hint="@string/input_email"
            android:inputType="textEmailAddress" />

        <ha.thanh.pikerfree.customviews.CustomEditText
            android:id="@+id/et_user_name"
            style="@style/editTextPlate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:hint="@string/input_username" />

        <ha.thanh.pikerfree.customviews.CustomEditText
            android:id="@+id/et_pass"
            style="@style/editTextPlate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <ha.thanh.pikerfree.customviews.CustomEditText
            android:id="@+id/et_pass_confirm"
            style="@style/editTextPlate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:hint="@string/password_confirm"
            android:inputType="textPassword" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_sign_up"
            style="@style/ImmortalButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/sign_up" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/already_have_an_account"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_log_in"
            style="@style/LegendButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="@string/login" />
    </LinearLayout>

</LinearLayout>
