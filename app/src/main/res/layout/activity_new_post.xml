<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_50_shade"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.newPost.NewPostActivity">

    <LinearLayout
        android:id="@+id/view_title"
        style="@style/ImmortalToolbar">

        <ImageView
            android:id="@+id/ic_back"
            style="@style/ToolbarLeftButton" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_title"
            style="@style/LegendToolbar"
            android:text="@string/new_post"
            app:fontAssetName="Roboto-Bold.ttf" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    style="@style/ImmortalCircleImage"
                    android:src="@drawable/ic_title" />

                <ha.thanh.pikerfree.customviews.CustomEditText
                    android:id="@+id/et_item_title"
                    style="@style/ImmortalEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:hint="@string/title_of_item_hint"
                    android:singleLine="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="60dp"
                android:background="@color/gray_40" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/edit_images"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/plate_shade_blue"
                android:gravity="center"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="Add Images"
                android:textColor="@color/white_100"
                android:textSize="18sp"
                android:tint="@color/white_100" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="60dp"
                android:background="@color/gray_40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/ImmortalCircleImage"
                    android:src="@drawable/ic_more" />

                <ha.thanh.pikerfree.customviews.CustomEditText
                    android:id="@+id/et_description"
                    style="@style/ImmortalEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/short_description"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/item_padding_small" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="60dp"
                android:background="@color/gray_40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    style="@style/ImmortalCircleImage"
                    android:src="@drawable/ic_forward" />

                <ha.thanh.pikerfree.customviews.CustomTextView
                    android:id="@+id/tv_select"
                    style="@style/ImmortalEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/select_a_category"
                    android:padding="8dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="60dp"
                android:background="@color/gray_40" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/bnt_post_this"
                style="@style/ImmortalButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/post" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>