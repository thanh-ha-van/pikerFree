<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_40"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/color_white"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_user"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_white"
            android:gravity="center_vertical"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textColor="@color/text_black_50"
            android:textSize="18sp"
            app:fontAssetName="Roboto-Bold.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_100"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_new_post"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_green_bold"
            android:gravity="center"
            android:text="@string/new_post"
            android:textAllCaps="true"
            android:textColor="@color/white_100"
            android:textSize="16sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_edit_profile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_green_bold_right"
            android:gravity="center"
            android:text="@string/edit_profile"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_loading_post"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/white_50_opacity"
            android:gravity="center"
            android:text="@string/sync"
            android:textColor="@color/gray_50"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_my_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/tv_no_data"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_data"
                android:textColor="@color/gray_50" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
