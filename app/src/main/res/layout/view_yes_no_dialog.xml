<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/plate_brown_shade"
    android:orientation="vertical"
    android:padding="20dp">

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />


    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/plate_orange_shade"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_ok_dialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/plate_green_shade"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>