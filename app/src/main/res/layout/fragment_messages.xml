<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteShade"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ha.thanh.pikerfree.customviews.CustomEditText
            android:id="@+id/tv_search_user"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/plate_small_corner"
            android:hint="Search for user..."
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black_3"
            android:textColorHint="@color/GrayScale"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:padding="14dp"
            android:src="@drawable/ic_search"
            android:tint="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:visibility="gone" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:gravity="center"
            android:text="You have no conversation yet"
            android:textColor="@color/text_black_3"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
