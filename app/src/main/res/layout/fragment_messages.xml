<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteShade"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ha.thanh.pikerfree.customviews.CustomEditText
                android:id="@+id/tv_search_mess"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="54dp"
                android:singleLine="true"
                android:background="@color/gray"
                android:hint="Search for message..."
                android:paddingStart="20dp"
                android:textColor="@color/text_black_3"
                android:textColorHint="@color/GrayScale"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="80dp"
                android:src="@drawable/ic_search"
                android:padding="14dp"
                android:background="@color/gray"
                android:tint="@color/colorPrimaryDark"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:visibility="gone" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:text="You have no conversation yet"
            android:textColor="@color/text_black_3"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
