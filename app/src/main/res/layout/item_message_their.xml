<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_margin="10dp"
    android:gravity="start"
    android:orientation="vertical">

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/tv_mess_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="right"
        android:text="10/27 10:35"
        android:textColor="@color/GrayScale" />

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/tv_mess_content"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@drawable/plate_shade"
        android:padding="10dp"
        android:text="It's over Anakin, I have high ground."
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
