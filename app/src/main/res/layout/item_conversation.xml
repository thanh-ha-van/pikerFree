<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/owner_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_user"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ha.thanh.pikerfree.customviews.CustomTextView
                    android:id="@+id/tv_userName"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Thanh Ha Van"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ha.thanh.pikerfree.customviews.CustomTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="10/27/2017"
                    android:textColor="@color/text_black_3"
                    android:textSize="14sp" />

            </LinearLayout>

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/tv_last_mess"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="Hey, how are you to day? I'd like to talk about shit. "
                android:textColor="@color/text_black_3"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="70dp"
        android:background="@color/gray" />
</LinearLayout>
