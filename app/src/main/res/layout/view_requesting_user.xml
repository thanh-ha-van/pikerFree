<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/color_white"
        android:gravity="center_vertical">

        <ImageView
            style="@style/circleIconImage"
            android:src="@drawable/ic_like" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_requesting_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="@string/requesting_user"
            android:textColor="@color/text_black_3"
            android:textSize="14sp"
            app:fontAssetName="Roboto-Bold.ttf" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_requesting_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/tv_no_requesting_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_white"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/no_requested_user"
        android:textColor="@color/orange"
        android:textSize="14sp" />

</LinearLayout>
