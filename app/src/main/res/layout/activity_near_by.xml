<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_50_opacity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_title"
        style="@style/normalToolbar">

        <ImageView
            android:id="@+id/ic_back"
            style="@style/toolbarBackButton" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_title"
            style="@style/toolbarTitle"
            android:text="@string/nearby"
            app:fontAssetName="Roboto-Bold.ttf" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/white_50_opacity"
        android:orientation="horizontal">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_list"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rectangle_green_bold"
            android:gravity="center"
            android:text="@string/list_view"
            android:textAllCaps="true"
            android:textColor="@color/white_100"
            android:textSize="16sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_map"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rectangle_green_bold_right"
            android:gravity="center"
            android:text="@string/map_view"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_distance"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/plate_brown_shade"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/distance"
            android:textAllCaps="true"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_down_distance"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rectangle_green_bold"
            android:padding="7dp"
            android:src="@drawable/ic_subtract"
            android:tint="@color/white_100" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_search_distance"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rectangle_blue_boder"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_up_distance"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rectangle_white_bold_right"
            android:padding="7dp"
            android:src="@drawable/ic_add"
            android:tint="@color/white_100" />

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/plate_shade_blue"
            android:padding="6dp"
            android:src="@drawable/ic_circular_arrow"
            android:tint="@color/white_100" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/view_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_posts"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>
