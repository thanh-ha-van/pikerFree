<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_padding_small">

    <ImageView
        android:id="@+id/img_item_image"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@drawable/file"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_shade_red"
        android:padding="10dp"
        android:src="@drawable/ic_error"
        android:tint="@color/red"
        android:visibility="gone" />

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:id="@+id/text_uploading"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/delete_button"
        android:layout_toEndOf="@+id/delete_button"
        android:background="@drawable/plate_shade"
        android:gravity="center"
        android:text="Uploading..."
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_image"
        app:layout_constraintLeft_toLeftOf="@+id/img_item_image"
        app:layout_constraintRight_toRightOf="@+id/img_item_image"
        app:layout_constraintTop_toTopOf="@+id/img_item_image" />
</android.support.constraint.ConstraintLayout>
