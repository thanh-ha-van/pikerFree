<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/height_layout_image_intro"
        android:layout_height="@dimen/height_layout_image_intro"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <View
            android:layout_width="@dimen/height_layout_image_intro"
            android:layout_height="@dimen/height_layout_image_intro"
            android:layout_gravity="center"
            android:background="@color/transparent" />


        <ImageView
            android:id="@+id/iv_character"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="bottom|center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_character_1" />

        <ImageView
            android:id="@+id/iv_image_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_circle_check"
            android:padding="2dp"
            android:src="@drawable/ic_time"
            android:tint="@color/white_100" />

        <ImageView
            android:id="@+id/iv_image_2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_circle_check"
            android:padding="3dp"
            android:src="@drawable/ic_title"
            android:tint="@color/white_100" />

        <ImageView
            android:id="@+id/iv_image_3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_circle_check"
            android:padding="5dp"
            android:src="@drawable/ic_flash"
            android:tint="@color/white_100" />

        <ImageView
            android:id="@+id/iv_image_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="@drawable/bg_circle_check"
            android:padding="7dp"
            android:src="@drawable/ic_edit_profile" />


    </FrameLayout>

    <ha.thanh.pikerfree.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="@string/intro_3"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />
</LinearLayout>
