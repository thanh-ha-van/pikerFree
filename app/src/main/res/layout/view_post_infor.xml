<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteShade"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_green_bold"
            android:gravity="center"
            android:text="@string/com_facebook_share_button_text"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/btn_save_local"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="2"
            android:background="@drawable/bg_rectangle_green_bold_right"
            android:gravity="center"
            android:text="@string/add_to_favorite"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="40dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_white">

        <ImageView
            style="@style/circleIconImage"
            android:src="@drawable/ic_more" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/text_black_3"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="40dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/color_white">

        <ImageView
            style="@style/circleIconImage"
            android:src="@drawable/ic_flash" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_post_status"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textAllCaps="true"
            android:textColor="@color/text_black_3"
            android:textSize="14sp"
            app:fontAssetName="Roboto-Regular.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/color_white">

        <ImageView
            style="@style/circleIconImage"
            android:src="@drawable/ic_forward" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_post_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/text_black_3"
            android:textSize="14sp"
            app:fontAssetName="Roboto-Regular.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/color_white">

        <ImageView
            style="@style/circleIconImage"
            android:src="@drawable/ic_time" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_day"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/text_black_3"
            android:textSize="14sp"
            app:fontAssetName="Roboto-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/color_white">

        <ImageView
            style="@style/circleIconImage"
            android:src="@drawable/ic_placeholder" />

        <ha.thanh.pikerfree.customviews.CustomTextView
            android:id="@+id/tv_distance"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/text_black_3"
            android:textSize="14sp"
            app:fontAssetName="Roboto-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="40dp"
        android:background="@color/gray" />

</LinearLayout>
