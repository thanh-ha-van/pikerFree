<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteShade"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="30dp"
            android:src="@drawable/piker"
            android:tint="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/view_favorite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite posts"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/tv_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/plate"
                android:gravity="center"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:text="1"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/GrayScale" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/plate_red"
                android:gravity="center"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:text="1"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/GrayScale" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />
        <LinearLayout
            android:id="@+id/view_privacy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy and term"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/GrayScale" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/GrayScale" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_help"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/GrayScale" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_manage_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manage account"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/GrayScale" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

    </LinearLayout>

</ScrollView>
