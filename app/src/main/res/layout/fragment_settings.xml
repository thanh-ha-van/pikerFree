<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="30dp"
            android:src="@drawable/piker"
            android:tint="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/view_favorite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_white"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_list"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/tv_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/plate"
                android:gravity="center"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:textColor="@color/white_100" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView style="@style/rightButton" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_white"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/plate_red"
                android:gravity="center"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:textColor="@color/white_100" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView style="@style/rightButton" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_privacy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_white"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/privacy"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView style="@style/rightButton" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_white"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_us"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView style="@style/rightButton" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_help"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_white"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/help_and_tip"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView style="@style/rightButton" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/view_manage_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color_white"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <ha.thanh.pikerfree.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/manage"
                android:textColor="@color/text_black_3"
                android:textSize="16sp" />

            <ImageView style="@style/rightButton" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray" />

    </LinearLayout>

</ScrollView>
